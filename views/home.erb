    <div id="home_login_wrapper">
        
        <div id="home_login">
            <div id="home_login_label"> Login </div>
            
            <form method="POST" action="/profile_check">
                <label for="email">Email</label>
                    <input type="text" name="email" placeholder="bob@gmail.com"/>
                    </br>
                <label for="password">Password</label>
                    <input type="password" name="password" placeholder="password"/>
                    </br>
                <input type="submit"/>

            </form>    
