        <div id="home_signup">
            <div id="home_signup_label"> Sign up! </div>
            
            <form method="POST" action="/profile_create">
                <label for="email"> Email </label>
                    <input type="text" name="[post]email" placeholder="bob@gmail.com"/>
                    </br>
                <label for="password">Password</label>
                    <input type="password" name="[post]password" placeholder="password"/>
                    </br>
                    <input type="password" name="confirm_password" placeholder="confirm password"/> 
                    </br>
                <label for="username">Username</label>
                    <input type="text" name="[post]username" placeholder="Enter a username"/>
                    </br>
                <label for="fname">First Name</label>
                    <input type="text" name="[post]fname" placeholder="Enter your first name."/>
                    </br>
                <label for="lname">Last Name</label>
                    <input type="text" name="[post]lname" placeholder="Enter your last name."/>
                    </br>
                <input type="submit"/>   
                
            </form>
            
        </div>
        
